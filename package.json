{
    "name": "marketmind-microservices",
    "version": "1.0.0",
    "main": "index.js",
    "scripts": {
        "prepare": "husky",
        "lint": "eslint",
        "lint:fix": "eslint --fix",
        "format:check": "prettier . --check",
        "format:fix": "prettier --write .",
        "test": "npm run test:auth && npm run test:product && npm run test:cart",
        "test:auth": "npm --prefix ./auth-service test",
        "test:product": "npm --prefix ./product-service test",
        "test:cart": "npm --prefix ./cart-service test"
    },
    "lint-staged": {
        "*.js": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "type": "module",
    "keywords": [
        "marketmind",
        "microservices",
        "backend"
    ],
    "author": "Shubhajit Paul",
    "license": "ISC",
    "description": "",
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@eslint/js": "^9.37.0",
        "eslint": "^9.37.0",
        "eslint-config-prettier": "^10.1.8",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.3",
        "prettier": "3.6.2"
    }
}